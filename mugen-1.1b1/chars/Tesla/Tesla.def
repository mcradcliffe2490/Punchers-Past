; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Tesla"        ;Name of character
displayname = "Tesla" ;Name of character to display
versiondate = 05,03,2022    ;Version date of character (MM-DD-YYYY)
mugenversion = 04,14,2002   ;Version of M.U.G.E.N character works on
author = "Xavier Luna"         ;Character author name
pal.defaults = 6,3,4,2      ;Default palettes in order of preference

; Files for the player
[Files]
cmd     = Tesla.cmd   ;Command set
cns     = Tesla.cns   ;Constants
st      = Tesla.cns   ;States
stcommon = common1.cns ;Common states
sprite  = Tesla.sff   ;Sprite
anim    = Tesla.air   ;Animation
sound   = Tesla.snd   ;Sound

ai	= Tesla.ai    ;File generated by the engine for AI boost

[Palette Keymap]
x = 1
y = 2
z = 3
a = 4
b = 5
c = 6

; Arcade mode
[Arcade]
intro.storyboard = intro.def
ending.storyboard = ending.def
