; Definition file for Kung Fu Man
; Contains all the filenames needed for the character

; Player information
[Info]
name = "Tesla"    ;Name of character
displayname = "Tesla" ;Name of character to display
versiondate = 05,05,2022    ;Version of character (MM-DD-YYYY or X.XX)
mugenversion = 1.0          ;Version of M.U.G.E.N character works on (X.XX)
author = "Xavier"         ;Character author name
pal.defaults = 1,2,3,4      ;Default palettes in order of preference (up to 4)
                            ;Numbering starts from 1
localcoord = 1280,720       ;Local coordinate space width and height

; Files for the player
[Files]
cmd     = Tesla.cmd        ;Command set
cns     = Tesla.cns        ;Constants
st      = Tesla.cns        ;States
stcommon = common1.cns      ;Common states (from data/ or motif)
sprite  = Tesla.sff        ;Sprite
anim    = Tesla.air        ;Animation
sound   = Tesla.snd           ;Sound
ai      = Tesla.ai         ;AI hints data (not used)

; Maps character selection buttons to palette numbers.
[Palette Keymap]
x = 1 ;Press button X to select palette 1, etc.
y = 2
z = 3
a = 4
b = 5
c = 6


